<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OtpBox">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/colorBorder</item> <!-- Fallback to color -->
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>

    <style name="DaySelectorBase">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@color/white</item> <!-- Fallback to color -->
    </style>

    <style name="DaySelectorSelected" parent="DaySelectorBase">
        <item name="android:background">@color/button_pink</item> <!-- Fallback to color -->
    </style>

    <style name="TimeSelectorIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="GridItemMainLarge">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="GridItemMain">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="GridItemSmall">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="DropdownCategoryButton" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/colorSurface</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
    </style>

    <style name="DropdownSideMenuButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="DayOfWeekHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="CalendarDayHeader" parent="DayOfWeekHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="CalendarDateCell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="StreakDayStackContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="StreakDayLetterAboveDot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="StreakDotActiveBelow">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/bg_dot_active</item>
    </style>

    <style name="StreakDotInactiveBelow">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/bg_dot_inactive</item>
    </style>

    <style name="Widget.Material3.Button.FilledTonalButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>

    <style name="WardrobeChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="chipBackgroundColor">@color/colorBackground</item>
        <item name="chipStrokeColor">@color/colorBorder</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
    </style>
</resources>